<Window x:Class="AsyncDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Асинхронное программирование" Height="500" Width="600">
    <StackPanel Margin="20">
        <GroupBox Header="CPU-bound операция" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <Button x:Name="calculateSumButton" 
                        Content="Вычислить сумму" 
                        Height="35" 
                        Margin="0,0,0,10"
                        Click="CalculateSumButton_Click"/>
                <ProgressBar x:Name="sumProgressBar" 
                            Minimum="0" 
                            Maximum="100" 
                            Height="25" 
                            Margin="0,0,0,10"/>
                <TextBlock x:Name="sumResultText" 
                          Text="Результат: ожидание" 
                          FontSize="14"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="HTTP запрос" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <Button x:Name="loadDataButton" 
                        Content="Загрузить данные" 
                        Height="35" 
                        Margin="0,0,0,10"
                        Click="LoadDataButton_Click"/>
                <ScrollViewer Height="100" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="httpResultText" 
                              Text="Данные: ожидание" 
                              TextWrapping="Wrap" 
                              FontSize="12"/>
                </ScrollViewer>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Блокирующая операция" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <Button x:Name="blockingOperationButton" 
                        Content="Запустить блокирующую операцию" 
                        Height="35" 
                        Margin="0,0,0,10"
                        Click="BlockingOperationButton_Click"/>
                <TextBlock x:Name="blockingStatusText" 
                          Text="Статус: ожидание" 
                          FontSize="14"/>
            </StackPanel>
        </GroupBox>

        <Button x:Name="clearButton" 
                Content="Очистить" 
                Height="35" 
                Click="ClearButton_Click"/>
    </StackPanel>
</Window>