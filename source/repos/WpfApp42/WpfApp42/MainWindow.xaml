<Window x:Class="ThreadDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление потоками через Thread" Height="600" Width="700">
    <StackPanel Margin="20">
        <GroupBox Header="Задача 1: Работа с потоками" Margin="0,0,0,20">
            <StackPanel Margin="10">
                <Button x:Name="startProgressButton" 
                        Content="Запустить поток с прогресс-баром" 
                        Height="35" 
                        Margin="0,0,0,10"
                        Click="StartProgressButton_Click"/>
                <ProgressBar x:Name="progressBar" 
                            Minimum="0" 
                            Maximum="100" 
                            Height="25" 
                            Margin="0,0,0,10"/>
                <TextBlock x:Name="progressStatusText" 
                          Text="Статус: ожидание" 
                          FontSize="14" 
                          Margin="0,0,0,10"/>

                <Button x:Name="startPriorityButton" 
                        Content="Запустить поток с высоким приоритетом" 
                        Height="35" 
                        Margin="0,10,0,10"
                        Click="StartPriorityButton_Click"/>
                <TextBlock x:Name="priorityStatusText" 
                          Text="Статус: ожидание" 
                          FontSize="14" 
                          Margin="0,0,0,10"/>

                <Button x:Name="tryUpdateUiButton" 
                        Content="Попробовать обновить UI без Dispatcher" 
                        Height="35" 
                        Margin="0,10,0,10"
                        Click="TryUpdateUiButton_Click"/>
                <TextBlock x:Name="errorText" 
                          Foreground="Red" 
                          TextWrapping="Wrap" 
                          FontSize="12" 
                          Margin="0,0,0,10"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Задача 2: Потоки с разными приоритетами">
            <StackPanel Margin="10">
                <Button x:Name="startPriorityComparisonButton" 
                        Content="Запустить сравнение приоритетов" 
                        Height="35" 
                        Margin="0,0,0,10"
                        Click="StartPriorityComparisonButton_Click"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="LOW" FontSize="14" Width="80"/>
                    <TextBlock x:Name="lowestValueText" 
                              Text="0" 
                              FontSize="14" 
                              FontWeight="Bold" 
                              Width="100"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="NORNAL" FontSize="14" Width="80"/>
                    <TextBlock x:Name="normalValueText" 
                              Text="0" 
                              FontSize="14" 
                              FontWeight="Bold" 
                              Width="100"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="HIGHT" FontSize="14" Width="80"/>
                    <TextBlock x:Name="highestValueText" 
                              Text="0" 
                              FontSize="14" 
                              FontWeight="Bold" 
                              Width="100"/>
                </StackPanel>

                <TextBlock x:Name="comparisonStatusText" 
                          Text="Статус: ожидание" 
                          FontSize="14" 
                          Margin="0,10,0,0"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>