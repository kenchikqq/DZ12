<Window x:Class="ProcessThreadDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Процессы и потоки в WPF" Height="500" Width="700">
    <StackPanel Margin="20">
        <GroupBox Header="Задача 1: Запуск Notepad" Margin="0,0,0,20">
            <StackPanel Margin="10">
                <Button x:Name="startNotepadButton" 
                        Content="Запустить Notepad и завершить через 3 секунды" 
                        Height="35" 
                        Margin="0,0,0,10"
                        Click="StartNotepadButton_Click"/>
                <TextBlock x:Name="notepadStatusText" 
                          Text="Статус: ожидание" 
                          FontSize="14" 
                          Margin="0,0,0,10"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Задача 2: Выполнение команды dir через cmd.exe" Margin="0,0,0,20">
            <StackPanel Margin="10">
                <Button x:Name="runCmdButton" 
                        Content="Выполнить команду dir" 
                        Height="35" 
                        Margin="0,0,0,10"
                        Click="RunCmdButton_Click"/>
                <TextBlock x:Name="cmdStatusText" 
                          Text="Статус: ожидание" 
                          FontSize="14" 
                          Margin="0,0,0,10"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Результаты выполнения команд">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                <TextBlock x:Name="resultText" 
                          Text="Результаты будут отображены здесь..." 
                          TextWrapping="Wrap" 
                          FontFamily="Consolas"
                          FontSize="12"
                          Margin="10"/>
            </ScrollViewer>
        </GroupBox>
    </StackPanel>
</Window>