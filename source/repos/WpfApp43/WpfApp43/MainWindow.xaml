<Window x:Class="ConcurrencyDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Конкурентность и синхронизация" Height="700" Width="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Задача 1: Гонки данных и синхронизация" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="raceConditionButton" 
                            Content="Запустить гонку данных" 
                            Height="35" 
                            Width="200"
                            Margin="0,0,10,0"
                            Click="RaceConditionButton_Click"/>
                    <Button x:Name="safeAddButton" 
                            Content="Запустить безопасное добавление" 
                            Height="35" 
                            Width="250"
                            Margin="0,0,10,0"
                            Click="SafeAddButton_Click"/>
                    <Button x:Name="monitorTimeoutButton" 
                            Content="Проверить монитор с таймаутом" 
                            Height="35" 
                            Width="250"
                            Click="MonitorTimeoutButton_Click"/>
                </StackPanel>
                <TextBlock x:Name="task1StatusText" 
                          Text="Статус: ожидание" 
                          FontSize="14" 
                          Margin="0,0,0,10"/>
                <ListBox x:Name="task1ListBox" 
                        Height="150" 
                        Margin="0,0,0,10"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="Задача 2: Производитель-Потребитель" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="startProducerConsumerButton" 
                            Content="Запустить производителя и потребителя" 
                            Height="35" 
                            Width="300"
                            Margin="0,0,10,0"
                            Click="StartProducerConsumerButton_Click"/>
                    <Button x:Name="stopProducerConsumerButton" 
                            Content="Остановить" 
                            Height="35" 
                            Width="100"
                            IsEnabled="False"
                            Click="StopProducerConsumerButton_Click"/>
                </StackPanel>
                <TextBlock x:Name="task2StatusText" 
                          Text="Статус: ожидание" 
                          FontSize="14" 
                          Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Производитель (добавлено):" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock x:Name="producerCountText" 
                                  Text="0" 
                                  FontSize="16" 
                                  FontWeight="Bold"/>
                        <ListBox x:Name="producerListBox" 
                                Height="200" 
                                Margin="0,10,0,0"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Потребитель (обработано):" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock x:Name="consumerCountText" 
                                  Text="0" 
                                  FontSize="16" 
                                  FontWeight="Bold"/>
                        <ListBox x:Name="consumerListBox" 
                                Height="200" 
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>